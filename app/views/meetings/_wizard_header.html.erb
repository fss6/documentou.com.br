<!-- Header -->
<div class="mb-8">
  <div class="flex justify-between items-start">
    <div>
      <h1 class="mt-4 text-3xl font-bold text-gray-900"><%= meeting.new_record? ? "Nova Reuni達o" : "Editar Reuni達o" %></h1>
      <p class="text-sm text-gray-600"><%= meeting.new_record? ? "Crie uma nova reuni達o" : "Atualize os dados da reuni達o" %></p>
    </div>
  </div>
</div>

<!-- Wizard Steps -->
<div class="mb-8" data-controller="wizard" data-wizard-current-step-value="<%= @step %>" data-wizard-meeting-id-value="<%= meeting.id %>">
  <div class="flex items-center justify-center">
    <div class="flex items-center space-x-4">
      <!-- Step 1: Meeting -->
      <div class="flex items-center">
        <button type="button" 
                class="wizard-step-button flex items-center focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded-lg p-1 <%= @step == 'meeting' ? 'cursor-default' : 'cursor-pointer hover:bg-gray-50' %>"
                data-action="click->wizard#navigateToStep"
                data-step="meeting"
                data-wizard-target="step"
                <%= 'disabled' if @step == 'meeting' %>>
          <div class="flex items-center justify-center w-8 h-8 rounded-full <%= @step == 'meeting' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-600' %>">
            <span class="text-sm font-medium">1</span>
          </div>
          <span class="ml-2 text-sm font-medium <%= @step == 'meeting' ? 'text-blue-600' : 'text-gray-500' %>"><%= t('meetings.wizard.meeting_step') %></span>
        </button>
      </div>
      
      <!-- Connector -->
      <div class="w-16 h-0.5 bg-gray-200"></div>
      
      <!-- Step 2: Content -->
      <div class="flex items-center">
        <button type="button" 
                class="wizard-step-button flex items-center focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded-lg p-1 <%= @step == 'content' ? 'cursor-default' : 'cursor-pointer hover:bg-gray-50' %>"
                data-action="click->wizard#navigateToStep"
                data-step="content"
                data-wizard-target="step"
                <%= 'disabled' if @step == 'content' %>>
          <div class="flex items-center justify-center w-8 h-8 rounded-full <%= @step == 'content' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-600' %>">
            <span class="text-sm font-medium">2</span>
          </div>
          <span class="ml-2 text-sm font-medium <%= @step == 'content' ? 'text-blue-600' : 'text-gray-500' %>"><%= t('meetings.wizard.content_step') %></span>
        </button>
      </div>
      
      <!-- Connector -->
      <div class="w-16 h-0.5 bg-gray-200"></div>
      
      <!-- Step 3: Agenda -->
      <div class="flex items-center">
        <button type="button" 
                class="wizard-step-button flex items-center focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 rounded-lg p-1 <%= @step == 'agenda' ? 'cursor-default' : 'cursor-pointer hover:ring-blue-500' %>"
                data-action="click->wizard#navigateToStep"
                data-step="agenda"
                data-wizard-target="step"
                <%= 'disabled' if @step == 'agenda' %>>
          <div class="flex items-center justify-center w-8 h-8 rounded-full <%= @step == 'agenda' ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-600' %>">
            <span class="text-sm font-medium">3</span>
          </div>
          <span class="ml-2 text-sm font-medium <%= @step == 'agenda' ? 'text-blue-600' : 'text-gray-500' %>"><%= t('meetings.wizard.agenda_step') %></span>
        </button>
      </div>
    </div>
  </div>
</div>
