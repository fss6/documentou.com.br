<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
      
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-2xl font-bold text-gray-900">
          <%= meeting.new_record? ? "Nova Reunião" : "Editar Reunião" %>
        </h1>
        <p class="mt-2 text-gray-600">
          <%= meeting.new_record? ? "Crie uma nova reunião" : "Atualize os dados da reunião" %>
        </p>
      </div>

      <%= form_with(model: meeting, class: "space-y-6") do |form| %>
        
        <!-- Error Messages -->
        <% if meeting.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(meeting.errors.count, "erro") %> encontrado<%= meeting.errors.count > 1 ? "s" : "" %>:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% meeting.errors.each do |error| %>
                      <li><%= error.full_message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Title Field -->
        <div>
          <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :title, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              placeholder: t('placeholders.meeting.title') %>
        </div>

        <!-- Description Field -->
        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :description, 
              rows: 4,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              placeholder: t('placeholders.meeting.description') %>
        </div>

        <!-- Date and Time Fields -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :start_datetime, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :start_datetime, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 datetime-field",
                data: { controller: "flatpickr" },
                placeholder: "Selecione data e hora de início" %>
          </div>

          <div>
            <%= form.label :end_datetime, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :end_datetime, 
                class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 datetime-field",
                data: { controller: "flatpickr" },
                placeholder: "Selecione data e hora de término" %>
          </div>
        </div>

        <!-- Location Field -->
        <div>
          <%= form.label :location, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :location, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
              placeholder: t('placeholders.meeting.location') %>
        </div>

        <!-- User ID Field (Hidden or Select) -->
        <div>
          <%= form.label :user_id, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.select :user_id, 
              User.all.map { |user| [user.email, user.id] },
              { prompt: t('placeholders.meeting.responsible') },
              { class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
        </div>

        <!-- Submit Button -->
        <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
          <%= link_to "Cancelar", meetings_path, 
              class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
          
          <%= form.submit meeting.new_record? ? "Criar Reunião" : "Atualizar Reunião",
              class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
