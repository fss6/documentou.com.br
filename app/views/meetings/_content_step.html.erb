<%= form_with(model: meeting, method: :patch, class: "p-6 space-y-6") do |form| %>
  <%= hidden_field_tag :step, @step %>
  
  <!-- Content Step -->
  <div>
    <h2 class="text-lg font-medium text-gray-900 mb-4">Conteúdo da Reunião</h2>
    <p class="text-sm text-gray-600 mb-6">Defina a estrutura do conteúdo da reunião</p>
    
    <!-- Error Messages -->
    <% if @content&.errors&.any? %>
      <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(@content.errors.count, "erro") %> encontrado<%= @content.errors.count > 1 ? "s" : "" %>:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% @content.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    
    <%= form.fields_for :content, @content do |content_form| %>
      <!-- Introduction Field -->
      <div class="space-y-1 mt-6">
        <%= content_form.label :introduction, class: "block text-sm font-medium text-gray-700" %>
        <%= content_form.text_area :introduction, 
            rows: 4,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            placeholder: "Introdução da reunião (opcional)" %>
      </div>

      <!-- Summary Field -->
      <div class="space-y-1 mt-6">
        <%= content_form.label :summary, class: "block text-sm font-medium text-gray-700" %>
        <%= content_form.text_area :summary, 
            rows: 4,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            placeholder: "Resumo da reunião (opcional)" %>
      </div>

      <!-- Closing Field -->
      <div class="space-y-1 mt-6">
        <%= content_form.label :closing, class: "block text-sm font-medium text-gray-700" %>
        <%= content_form.text_area :closing, 
            rows: 4,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            placeholder: "Encerramento da reunião (opcional)" %>
      </div>
    <% end %>
  </div>

  <!-- Submit Button -->
  <div class="flex justify-between pt-6 border-t border-gray-200">
    <%= link_to "Voltar", edit_meeting_path(@meeting, step: 'meeting'), 
        class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
    
    <%= form.submit "Próximo",
        class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  </div>
<% end %>
