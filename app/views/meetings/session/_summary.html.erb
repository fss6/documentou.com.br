<!-- Summary Section -->
<div class="mb-8">
  <!-- Header -->
  <div class="mb-4">
    <h3 class="text-xl font-semibold text-gray-900 mb-2">Resumo</h3>
    <p class="text-sm text-gray-600">Principais pontos discutidos</p>
  </div>
  
  <!-- Content -->
  <div>
    <% if @meeting.summary.present? %>
      <div class="prose prose-gray max-w-none">
        <%= @meeting.summary.html_safe %>
      </div>
    <% else %>
      <div class="text-center py-8 bg-gray-50 rounded-lg">
        <div class="w-16 h-16 bg-gray-200 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Nenhum resumo definido</h3>
        <p class="text-gray-500">Adicione um resumo dos principais pontos discutidos.</p>
      </div>
    <% end %>
  </div>
</div>
