<!-- Encerramento da Reunião -->
<div class="px-8 py-6 border-b border-gray-200">
  <div class="flex items-center justify-between mb-4">
    <h3 class="text-lg font-semibold text-gray-900">Encerramento</h3>
    <div data-quill-auto-save-target="status" class="text-sm text-green-600 font-medium bg-green-100 px-3 py-1 rounded-full">✅ Salvo</div>
  </div>
  
  <div data-controller="quill-auto-save" 
       data-quill-auto-save-url-value="<%= update_content_meeting_path(@meeting) %>"
       data-quill-auto-save-field-value="closing"
       data-quill-auto-save-meeting-id-value="<%= @meeting.id %>"
       data-quill-auto-save-debounce-ms-value="2000"
       data-quill-auto-save-placeholder-value="Conclusões, próximos passos, acordos finais..."
       data-quill-auto-save-rows-value="20">
    
    <!-- Hidden input para o Rails -->
    <input type="hidden" name="content[closing]" value="<%= html_escape(@content.closing.to_s) %>" data-quill-auto-save-target="input">
    
    <!-- Container do Quill -->
    <div class="quill-container">
      <div data-quill-auto-save-target="editor" class="quill-editor quill-editor--full"></div>
    </div>
  </div>
</div>

<!-- Concluir Reunião -->
<div class="px-8 py-6">
  <div class="text-center">
    <h3 class="text-lg font-semibold text-gray-900 mb-3">Finalizar Sessão</h3>
    <p class="text-sm text-gray-600 max-w-2xl mx-auto leading-relaxed mb-6">
      Quando todos os tópicos foram discutidos e as ações foram definidas, você pode concluir esta reunião.
    </p>
    
    <%= button_to complete_meeting_path(@meeting), method: :patch,
        class: "inline-flex items-center px-6 py-3 bg-green-600 text-white text-base font-medium rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-all duration-200 shadow-sm",
        data: { confirm: "Tem certeza que deseja concluir esta reunião? Esta ação não pode ser desfeita." } do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      Concluir Reunião
    <% end %>
  </div>
</div>
