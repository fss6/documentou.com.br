<!-- Decisions Section -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 h-full" data-controller="decision" data-decision-meeting-id-value="<%= @meeting.id %>">
  <div class="px-6 py-4 border-b border-gray-200">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-lg font-semibold text-gray-900">Decisões Tomadas</h3>
      <button type="button" 
              class="p-2 text-blue-600 hover:text-blue-700 hover:bg-blue-50 rounded-lg transition-colors duration-200"
              data-action="click->decision#showAddModal">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
      </button>
    </div>
  </div>
  
  <div class="p-6">
    <!-- Decisions List -->
    <div class="space-y-3" data-decision-target="list">
      <% if @decisions.any? %>
        <% @decisions.each do |decision| %>
          <div class="flex items-start space-x-3 p-4 border border-gray-200 rounded-lg bg-gray-50" data-decision-id="<%= decision.id %>">
            <div class="flex-1">
              <div class="flex items-center justify-between mb-2">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                  <%= case decision.status
                      when 'pending' then 'bg-yellow-100 text-yellow-800'
                      when 'approved' then 'bg-green-100 text-green-800'
                      when 'rejected' then 'bg-red-100 text-red-800'
                      end %>">
                  <%= decision.status_display %>
                </span>
                <div class="flex items-center space-x-2">
                  <p class="text-xs text-gray-500">
                    Criada em <%= decision.created_at.strftime("%d/%m/%Y às %H:%M") %>
                  </p>
                  <!-- Menu de contexto -->
                  <div class="relative" data-controller="dropdown">
                    <button type="button" 
                            class="p-1 text-gray-400 hover:text-gray-600 rounded-full hover:bg-gray-200 transition-colors duration-200"
                            data-action="click->dropdown#toggle">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
                      </svg>
                    </button>
                    <div class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg border border-gray-200 z-10" data-dropdown-target="menu">
                      <div class="py-1">
                        <button type="button" 
                                class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 flex items-center"
                                data-action="click->decision#showEditModal"
                                data-decision-id="<%= decision.id %>">
                          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                          </svg>
                          Editar
                        </button>
                        <button type="button" 
                                class="w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-gray-100 flex items-center"
                                data-action="click->decision#showDeleteModal"
                                data-decision-id="<%= decision.id %>">
                          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                          </svg>
                          Excluir
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <p class="text-sm text-gray-900"><%= decision.description %></p>
            </div>
          </div>

          <!-- Modal de Edição para esta decisão específica -->
          <div class="hidden fixed inset-0 modal-backdrop overflow-y-auto h-full w-full z-50" 
               id="edit-decision-<%= decision.id %>"
               data-action="click->decision#closeEditModal">
            
            <!-- Modal Container -->
            <div class="relative top-20 mx-auto p-0 w-full max-w-md transform transition-all duration-300"
                 data-action="click->decision#stopPropagation">
              
              <!-- Modal Content -->
              <div class="bg-white rounded-xl shadow-2xl border-0 overflow-hidden">
                
                <!-- Header -->
                <div class="px-6 py-4 border-b border-gray-200">
                  <div class="flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-gray-900">Editar Decisão</h3>
                    <button type="button" 
                            class="text-gray-400 hover:text-gray-600 transition-colors duration-200"
                            data-action="click->decision#closeEditModal">
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                </div>
                
                <!-- Form -->
                <div class="px-6 py-6">
                  <%= form_with model: decision, url: meeting_decision_path(@meeting, decision), local: false, 
                              data: { action: "submit->decision#updateDecision" },
                              class: "space-y-6" do |form| %>
                    <%= form.hidden_field :meeting_id, value: @meeting.id %>
                    
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">Descrição da Decisão</label>
                      <%= form.text_area :description, 
                                        rows: 4,
                                        class: "block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
                                        placeholder: "Descreva a decisão tomada na reunião...",
                                        data: { decision_target: "description" } %>
                    </div>
                    
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                      <%= form.select :status, 
                                     Decision.statuses.keys.map { |s| [Decision.new(status: s).status_display, s] },
                                     { selected: decision.status },
                                     class: "block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
                                     data: { decision_target: "status" } %>
                    </div>
                    
                    <!-- Footer -->
                    <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-200">
                      <button type="button" 
                              class="px-6 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200"
                              data-action="click->decision#closeEditModal">
                        Cancelar
                      </button>
                      <button type="submit" 
                              class="px-6 py-2.5 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200 shadow-sm">
                        Atualizar Decisão
                      </button>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

          <!-- Modal de Confirmação para Exclusão desta decisão -->
          <div class="hidden fixed inset-0 modal-backdrop overflow-y-auto h-full w-full z-50" 
               id="delete-decision-<%= decision.id %>"
               data-action="click->decision#closeDeleteModal">
            
            <!-- Modal Container -->
            <div class="relative top-20 mx-auto p-0 w-full max-w-md transform transition-all duration-300"
                 data-action="click->decision#stopPropagation">
              
              <!-- Modal Content -->
              <div class="bg-white rounded-xl shadow-2xl border-0 overflow-hidden">
                
                <!-- Header -->
                <div class="px-6 py-4 border-b border-gray-200">
                  <div class="flex items-center justify-between">
                    <h3 class="text-lg font-semibold text-gray-900">Confirmar Exclusão</h3>
                    <button type="button" 
                            class="text-gray-400 hover:text-gray-600 transition-colors duration-200"
                            data-action="click->decision#closeDeleteModal">
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                </div>
                
                <!-- Content -->
                <div class="px-6 py-6">
                  
                  <p class="text-gray-700 mb-6">
                    Tem certeza que deseja excluir esta decisão? Esta ação removerá permanentemente a decisão do sistema.
                  </p>
                  
                  <!-- Footer -->
                  <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-200">
                    <button type="button" 
                            class="px-6 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200"
                            data-action="click->decision#closeDeleteModal">
                      Cancelar
                    </button>
                    <button type="button" 
                            class="px-6 py-2.5 text-sm font-medium text-white bg-red-600 border border-transparent rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-all duration-200 shadow-sm"
                            data-action="click->decision#confirmDelete"
                            data-decision-id="<%= decision.id %>">
                      Excluir Decisão
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-sm text-gray-500 italic text-center py-8">Nenhuma decisão foi registrada ainda.</p>
      <% end %>
    </div>
  </div>

  <!-- Modal para Adicionar Nova Decisão -->
  <div class="hidden fixed inset-0 modal-backdrop overflow-y-auto h-full w-full z-50" 
       id="add-decision-modal"
       data-action="click->decision#closeAddModal">
    
    <!-- Modal Container -->
    <div class="relative top-20 mx-auto p-0 w-full max-w-md transform transition-all duration-300"
         data-action="click->decision#stopPropagation">
      
      <!-- Modal Content -->
      <div class="bg-white rounded-xl shadow-2xl border-0 overflow-hidden">
        
        <!-- Header -->
        <div class="px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <h3 class="text-lg font-semibold text-gray-900">Nova Decisão</h3>
            <button type="button" 
                    class="text-gray-400 hover:text-gray-600 transition-colors duration-200"
                    data-action="click->decision#closeAddModal">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <!-- Form -->
        <div class="px-6 py-6">
          <%= form_with model: Decision.new, url: meeting_decisions_path(@meeting), local: false, 
                      data: { action: "submit->decision#createDecision" },
                      class: "space-y-6" do |form| %>
            <%= form.hidden_field :meeting_id, value: @meeting.id %>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Descrição da Decisão</label>
              <%= form.text_area :description, 
                                rows: 4,
                                class: "block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
                                placeholder: "Descreva a decisão tomada na reunião...",
                                data: { decision_target: "description" } %>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Status</label>
              <%= form.select :status, 
                             Decision.statuses.keys.map { |s| [Decision.new(status: s).status_display, s] },
                             { selected: 'pending' },
                             class: "block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200",
                             data: { decision_target: "status" } %>
            </div>
            
            <!-- Footer -->
            <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-200">
              <button type="button" 
                      class="px-6 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200"
                      data-action="click->decision#closeAddModal">
                Cancelar
              </button>
              <button type="submit" 
                      class="px-6 py-2.5 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200 shadow-sm">
                Salvar Decisão
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
