<!-- Meeting Info Bar -->
<div class="bg-white border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <div class="flex items-center justify-between">
      <div>
        <h2 class="text-xl font-semibold text-gray-900"><%= @meeting.title %></h2>
        <p class="text-sm text-gray-600">
          <%= @meeting.start_datetime.strftime("%d/%m/%Y às %H:%M") %> - 
          <%= @meeting.location.present? ? @meeting.location : "Local não definido" %>
        </p>
      </div>
      <div class="text-right">
        <p class="text-sm text-gray-600">Responsável</p>
        <p class="text-sm font-medium text-gray-900"><%= @meeting.creator.name %></p>
      </div>
    </div>
  </div>
</div>
