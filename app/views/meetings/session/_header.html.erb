<!-- Hero Section -->
<div class="relative bg-white border-b border-gray-200">
  <div class="px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center">
      <!-- Status Indicator (Top Right) -->
      <div class="absolute top-4 right-4">
        <div class="inline-flex items-center px-3 py-1.5 bg-gray-100 border border-gray-300 rounded-full text-gray-700 text-sm font-medium">
          <div class="w-2 h-2 bg-green-500 rounded-full mr-2"></div>
          <%= @meeting.status_display %>
        </div>
      </div>
      
      <!-- Main Title -->
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6 tracking-tight">
        <%= @meeting.title %>
      </h1>
      
      <!-- Meeting Details - Text Only -->
      <div class="max-w-2xl mx-auto mb-8 space-y-2">
        <p class="text-gray-700 text-lg">
          <span class="font-medium">Data:</span> <%= @meeting.start_datetime.strftime("%d/%m/%Y às %H:%M") %>
        </p>
        <p class="text-gray-700 text-lg">
          <span class="font-medium">Local:</span> <%= @meeting.location.present? ? @meeting.location : "Local não definido" %>
        </p>
        <p class="text-gray-700 text-lg">
          <span class="font-medium">Responsável:</span> <%= @meeting.creator.name %>
        </p>
      </div>
      
      <!-- Action Buttons -->
      <div class="flex items-center justify-center space-x-4">
        <%= link_to meeting_path(@meeting), 
            class: "inline-flex items-center px-6 py-3 bg-gray-100 border border-gray-300 text-gray-700 text-base font-medium rounded-lg hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          Ver Ata
        <% end %>
      </div>
    </div>
  </div>
</div>
