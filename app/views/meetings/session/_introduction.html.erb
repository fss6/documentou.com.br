<!-- Introdução da Reunião -->
<div class="px-8 py-6 border-b border-gray-200">
  <h3 class="text-lg font-semibold text-gray-900 mb-4">Introdução</h3>
  <% if @meeting.introduction.present? %>
    <div class="prose prose-sm max-w-none">
      <%= @meeting.introduction.html_safe %>
    </div>
  <% else %>
    <p class="text-sm text-gray-500 italic">Nenhuma introdução foi registrada para esta reunião.</p>
  <% end %>
</div>
