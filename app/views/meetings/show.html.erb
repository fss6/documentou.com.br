<div class="max-w-4xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex justify-between items-start">
      <div>
        <nav class="flex" aria-label="Breadcrumb">
          <ol class="flex items-center space-x-4">
            <li>
              <%= link_to root_path, class: "text-gray-500 hover:text-gray-700" do %>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
                </svg>
              <% end %>
            </li>
            <li>
              <div class="flex items-center">
                <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
                <%= link_to "Reuniões", meetings_path, class: "ml-4 text-sm font-medium text-gray-500 hover:text-gray-700" %>
              </div>
            </li>
            <li>
              <div class="flex items-center">
                <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="ml-4 text-sm font-medium text-gray-500">Ata de Reunião</span>
              </div>
            </li>
          </ol>
        </nav>
      </div>
      <div class="flex space-x-3">
        <%= link_to edit_meeting_path(@meeting), 
            class: "inline-flex items-center px-4 py-2 bg-white border border-gray-300 text-sm font-medium rounded-md text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
          Editar
        <% end %>
        <%= button_to meeting_path(@meeting), 
            method: :delete,
            class: "inline-flex items-center px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2",
            data: { confirm: "Tem certeza que deseja excluir esta reunião?" } do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Excluir
        <% end %>
      </div>
    </div>
  </div>

  <!-- Notice Message -->
  <% if notice %>
    <div class="mb-6 bg-green-50 border border-green-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Ata de Reunião -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
    
    <!-- Cabeçalho da Ata -->
    <div class="px-8 py-6 border-b-2 border-gray-300 bg-gray-50">
      <div class="text-center">
        <h1 class="text-2xl font-bold text-gray-900 mb-2">ATA DE REUNIÃO</h1>
                        <h2 class="text-xl font-semibold text-gray-900"><%= @meeting.title %></h2>
      </div>
    </div>

    <!-- Informações da Reunião -->
    <div class="px-8 py-6 border-b border-gray-200">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Informações Gerais</h3>
          <dl class="space-y-3">
            <% if @meeting.start_datetime.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Data e Hora de Início</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-2 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                    </svg>
                    <%= @meeting.start_datetime.strftime("%d/%m/%Y às %H:%M") %>
                  </div>
                </dd>
              </div>
            <% end %>
            
            <% if @meeting.end_datetime.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Data e Hora de Término</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-2 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                    </svg>
                    <%= @meeting.end_datetime.strftime("%d/%m/%Y às %H:%M") %>
                  </div>
                </dd>
              </div>
            <% end %>
            
            <% if @meeting.location.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Local</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-2 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                    </svg>
                    <%= @meeting.location %>
                  </div>
                </dd>
              </div>
            <% end %>
          </dl>
        </div>
        
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Participantes</h3>
          <div class="text-sm text-gray-600">
            <p>Reunião criada por: <strong><%= @meeting.creator.email %></strong></p>
            <p class="mt-2">Participantes: A definir</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Descrição da Reunião -->
    <% if @meeting.description.present? %>
      <div class="px-8 py-6 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Objetivo da Reunião</h3>
        <div class="prose prose-sm max-w-none">
                          <p class="text-gray-900 leading-relaxed"><%= @meeting.description %></p>
        </div>
      </div>
    <% end %>

    <!-- Pauta da Reunião -->
    <div class="px-8 py-6 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Pauta</h3>
      <% if @meeting.agendas.any? %>
        <div class="space-y-3">
          <% @meeting.agendas.order(:position).each_with_index do |agenda, index| %>
            <div class="flex items-start">
              <div class="flex items-center mr-4 mt-0.5 flex-shrink-0">
                <svg class="w-5 h-5 text-gray-900" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="flex-1">
                <p class="text-sm text-gray-900 leading-relaxed">
                  <strong><%= agenda.title %></strong>
                  <% if agenda.description.present? %>
                    <br><span class="text-gray-900"><%= agenda.description %></span>
                  <% end %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-500 italic">Nenhum item na pauta foi definido.</p>
      <% end %>
    </div>

    <!-- Conteúdo da Reunião -->
    <% if @meeting.content.present? %>
      <div class="px-8 py-6 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Desenvolvimento</h3>
        
        <% if @meeting.content.introduction.present? %>
          <div class="mb-6">
            <h4 class="text-md font-medium text-gray-900 mb-2">Introdução</h4>
            <div class="prose prose-sm max-w-none">
              <%= @meeting.content.introduction.html_safe %>
            </div>
          </div>
        <% end %>
        
        <% if @meeting.content.summary.present? %>
          <div class="mb-6">
            <h4 class="text-md font-medium text-gray-900 mb-2">Discussões e Decisões</h4>
            <div class="prose prose-sm max-w-none">
              <%= @meeting.content.summary.html_safe %>
            </div>
          </div>
        <% end %>
        
        <% if @meeting.content.closing.present? %>
          <div>
            <h4 class="text-md font-medium text-gray-900 mb-2">Encerramento</h4>
            <div class="prose prose-sm max-w-none">
              <%= @meeting.content.closing.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Ações Definidas -->
    <div class="px-8 py-6 border-b border-gray-200">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Ações Definidas</h3>
      <% tasks = Task.where(meeting: @meeting) %>
      <% if tasks.any? %>
        <div class="space-y-3">
          <% tasks.each do |task| %>
            <div class="flex items-start">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium mr-3 mt-0.5 flex-shrink-0
                <%= case task.status
                    when 'pending' then 'bg-yellow-100 text-yellow-800'
                    when 'in_progress' then 'bg-blue-100 text-blue-800'
                    when 'completed' then 'bg-green-100 text-green-800'
                    end %>">
                <%= task.status_display %>
              </span>
              <div class="flex-1">
                <p class="text-sm text-gray-900 leading-relaxed">
                  <strong><%= task.description %></strong>
                  <br><span class="text-gray-900">
                    Responsável: <%= task.owner.name %>
                    <br>Prazo: <%= task.deadline.strftime("%d/%m/%Y") %>
                    <% if task.overdue? %>
                      <span class="text-red-600">(Atrasada)</span>
                    <% end %>
                  </span>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-sm text-gray-500 italic">Nenhuma ação foi definida nesta reunião.</p>
      <% end %>
    </div>

    <!-- Rodapé da Ata -->
    <div class="px-8 py-6 bg-gray-50">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h4 class="text-sm font-medium text-gray-900 mb-2">Responsável pela Ata</h4>
                          <p class="text-sm text-gray-900"><%= @meeting.creator.name %></p>
        </div>
        <div>
          <h4 class="text-sm font-medium text-gray-900 mb-2">Data de Criação</h4>
                          <p class="text-sm text-gray-900"><%= @meeting.created_at.strftime("%d/%m/%Y às %H:%M") %></p>
        </div>
      </div>
    </div>
  </div>
</div>
