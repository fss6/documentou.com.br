<div class="task-card bg-white rounded-lg shadow-sm border border-gray-200 p-3 cursor-move hover:shadow-md transition-shadow duration-200 relative mb-3"
     data-task-id="<%= task.id %>"
     data-status="<%= task.status %>"
     data-kanban-target="taskCard">
  
  <!-- Task Content -->
  <div class="space-y-2">
    <!-- Description -->
    <div class="text-sm font-medium text-gray-900 leading-tight">
      <%= task.description %>
    </div>
    
    <!-- Meeting Info -->
    <% if task.meeting.present? %>
      <div class="text-xs text-gray-600 bg-gray-50 rounded px-2 py-1">
        ğŸ“… <%= task.meeting.title %>
      </div>
    <% end %>
    
    <!-- Deadline -->
    <div class="flex items-center text-xs <%= task.overdue? ? 'text-red-600' : 'text-gray-500' %>">
      <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      <% if task.overdue? %>
        <span class="font-medium">Atrasada: <%= l(task.deadline, format: :short) %></span>
      <% else %>
        <span>Prazo: <%= l(task.deadline, format: :short) %></span>
      <% end %>
    </div>
    
    <!-- Creation Date -->
    <div class="text-xs text-gray-400">
      Criada em <%= l(task.created_at, format: :short) %>
    </div>
  </div>
  

  
  <!-- Action Buttons -->
  <div class="mt-3 flex items-center justify-end space-x-2">
    <%= link_to edit_task_path(task), class: "text-gray-400 hover:text-gray-600 transition-colors" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
      </svg>
    <% end %>
    
    <%= link_to task_path(task), method: :delete, 
                data: { confirm: 'Tem certeza que deseja excluir esta tarefa?' },
                class: "text-gray-400 hover:text-red-600 transition-colors" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
      </svg>
    <% end %>
  </div>
</div>
