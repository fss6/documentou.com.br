<div class="min-h-screen bg-gray-50">
  <%= render 'meetings/session/header' %>
  <%= render 'meetings/session/meeting_info' %>
  
  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Single Column: Introduction, Agenda, Summary -->
    <div class="space-y-6 mb-8">
      <%= render 'meetings/session/introduction' %>
      <%= render 'meetings/session/agenda' %>
      <%= render 'meetings/session/content_header' %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="p-6">
          <label class="block text-sm font-medium text-gray-700 mb-2">Resumo das Discuss천es</label>
          <div data-controller="quill" 
               data-quill-placeholder-value="Resumo das discuss천es, pontos importantes, argumentos apresentados..."
               data-quill-rows-value="8">
            <!-- Hidden input para o Rails -->
            <input type="hidden" name="content[summary]" data-quill-target="input">
            
            <!-- Container do Quill -->
            <div class="quill-container">
              <div data-quill-target="editor" class="quill-editor quill-editor--full"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Two Columns: Actions and Decisions -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      <div>
        <%= render 'meetings/session/actions' %>
      </div>
      <div>
        <%= render 'meetings/session/decisions' %>
      </div>
    </div>

    <!-- Single Column: Closing -->
    <div class="space-y-6">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="p-6">
          <label class="block text-sm font-medium text-gray-700 mb-2">Encerramento</label>
          <div data-controller="quill" 
               data-quill-placeholder-value="Conclus천es, pr처ximos passos, acordos finais..."
               data-quill-rows-value="6">
            <!-- Hidden input para o Rails -->
            <input type="hidden" name="content[closing]" data-quill-target="input">
            
            <!-- Container do Quill -->
            <div class="quill-container">
              <div data-quill-target="editor" class="quill-editor quill-editor--full"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
